    def run_google_drive_script(self):
        """Ex√©cuter le script Google Drive"""
        self.write_to_console("üöÄ Initialisation du programme...\n")
        self.write_to_console("=" * 60 + "\n")
        
        try:
            # V√©rifier si le service est d√©j√† initialis√©
            if not self.drive_service:
                # Connexion √† Google Drive
                service = self.connect_to_drive()
            else:
                service = self.drive_service
            
            # Lister les fichiers
            self.list_drive_files(service, DOSSIER_PARTAGE_ID)
            
            self.write_to_console("=" * 60 + "\n")
            self.write_to_console("‚úÖ Programme initialis√© avec succ√®s !\n")
            
        except FileNotFoundError:
            self.write_to_console(f"‚ùå Fichier de credentials non trouv√© !\n")
            self.write_to_console(f"üìÅ Chemin: {SERVICE_ACCOUNT_FILE}\n")
            self.write_to_console("üí° V√©rifiez le chemin du fichier JSON\n\n")
            
        except Exception as e:
            self.write_to_console(f"‚ùå Erreur: {str(e)}\n")
            self.write_to_console("üí° V√©rifiez vos credentials et permissions\n\n")
        
        self.write_to_console("üî∏ Console pr√™te. Vous pouvez interagir avec le programme.\n")
    
    def connect_to_drive(self):
        """Se connecter √† Google Drive"""
        self.write_to_console("üîó Connexion √† Google Drive...\n")
        
        scopes = ['https://www.googleapis.com/auth/drive']
        credentials = Credentials.from_service_account_file(SERVICE_ACCOUNT_FILE, scopes=scopes)
        service = build('drive', 'v3', credentials=credentials)
        
        # Sauvegarder le service pour r√©utilisation
        self.drive_service = service
        
        self.write_to_console("‚úÖ Connect√© √† Google Drive avec succ√®s !\n\n")
        return service
    
    def list_drive_files(self, service, dossier_id):
        """Lister les fichiers du dossier partag√©"""
        self.write_to_console(f"üìã Analyse du dossier partag√©...\n")
        
        try:
            query = f"'{dossier_id}' in parents and trashed=false"
            
            results = service.files().list(
                q=query,
                fields="files(id, name, mimeType, size, modifiedTime, owners)",
                orderBy="modifiedTime desc"
            ).execute()
            
            items = results.get('files', [])
            
            if not items:
                self.write_to_console("üìÇ Dossier vide - Pr√™t pour les premi√®res discussions !\n\n")
                return
            
            self.write_to_console(f"üìÅ {len(items)} √©l√©ments trouv√©s :\n\n")
            
            # S√©parer et afficher
            dossiers = [item for item in items if item['mimeType'] == 'application/vnd.google-apps.folder']
            fichiers = [item for item in items if item['mimeType'] != 'application/vnd.google-apps.folder']
            
            if dossiers:
                self.write_to_console("üìÇ DOSSIERS :\n")
                for dossier in dossiers:
                    self.write_to_console(f"   üìÅ {dossier['name']}\n")
            
            if fichiers:
                self.write_to_console("\nüìÑ FICHIERS DE DISCUSSION :\n")
                for fichier in fichiers[:10]:  # Limiter √† 10 pour l'affichage
                    taille = fichier.get('size', 'N/A')
                    if taille and taille != 'N/A':
                        taille = f"{int(taille):,} bytes"
                    
                    self.write_to_console(f"   üìÑ {fichier['name']}\n")
                    self.write_to_console(f"      Taille: {taille}\n")
                
                if len(fichiers) > 10:
                    self.write_to_console(f"   ... et {len(fichiers) - 10} autres fichiers\n")
            
            self.write_to_console("\n")
                
        except Exception as e:
            self.write_to_console(f"‚ùå Erreur lors de l'analyse: {e}\n\n")

